<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:simpleType name="TrueFalse">
    <xs:restriction base="xs:string">
      <xs:enumeration value="true" />
      <xs:enumeration value="false" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="DebugLevel">
    <xs:restriction base="xs:string">
      <xs:enumeration value="error" />
      <xs:enumeration value="warning" />
      <xs:enumeration value="info" />
      <xs:enumeration value="debug" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="DirectoryOperationType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="keep" />
      <xs:enumeration value="delete" />
      <xs:enumeration value="deleteonsuccess" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="ContainerDateTimeTagFormat">
    <xs:restriction base="xs:string">
      <xs:enumeration value="none" />
      <xs:enumeration value="prefix" />
      <xs:enumeration value="suffix" />
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="emexd">
    <xs:complexType>
      <xs:all>
        <xs:element name="client-listen"
		    minOccurs="0"
		    maxOccurs="1">
          <xs:complexType>
             <xs:attribute name="address"
                                 type="xs:string"
                                 use="required"/>
             <xs:attribute name="port"
                                 type="xs:unsignedShort"
                                 use="required"/>
          </xs:complexType>
        </xs:element>
        <xs:element name="container-listen"
		    minOccurs="0"
		    maxOccurs="1">
          <xs:complexType>
             <xs:attribute name="address"
                                 type="xs:string"
                                 use="required"/>
             <xs:attribute name="port"
                                 type="xs:unsignedShort"
                                 use="required"/>
          </xs:complexType>
        </xs:element>
        <xs:element name="state-messages"
		    minOccurs="0"
		    maxOccurs="1">
          <xs:complexType>
             <xs:attribute name="enable"
                                 type="TrueFalse"
                                 use="required"/>
          </xs:complexType>
        </xs:element>
        <xs:element name="allowed-cpus"
		    minOccurs="0"
		    maxOccurs="1">
          <xs:complexType>
             <xs:attribute name="ids"
                                 type="xs:string"
                                 use="required"/>
          </xs:complexType>
        </xs:element>
        <xs:element name="allowed-host-ports"
		    minOccurs="0"
		    maxOccurs="1">
          <xs:complexType>
             <xs:attribute name="ports"
                                 type="xs:string"
                                 use="required"/>
          </xs:complexType>
        </xs:element>
        <xs:element name="docker-image"
		    minOccurs="0"
		    maxOccurs="1">
          <xs:complexType>
             <xs:attribute name="name"
                                 type="xs:string"
                                 use="required"/>
          </xs:complexType>
        </xs:element>
        <xs:element name="emexcontainerd-loglevel"
		    minOccurs="0"
		    maxOccurs="1">
          <xs:complexType>
             <xs:attribute name="level"
                                 type="DebugLevel"
                                 use="required"/>
          </xs:complexType>
        </xs:element>
        <xs:element name="stop-all-containers"
		    minOccurs="0"
		    maxOccurs="1">
          <xs:complexType>
             <xs:attribute name="enable"
                                 type="TrueFalse"
                                 use="required"/>
          </xs:complexType>
        </xs:element>
        <xs:element name="emexdirectory"
		    minOccurs="0"
		    maxOccurs="1">
          <xs:complexType>
             <xs:attribute name="action"
                                 type="DirectoryOperationType"
                                 use="required"/>
          </xs:complexType>
        </xs:element>
        <xs:element name="container-datetime-tag"
		    minOccurs="0"
		    maxOccurs="1">
          <xs:complexType>
             <xs:attribute name="format"
                                 type="ContainerDateTimeTagFormat"
                                 use="required"/>
          </xs:complexType>
        </xs:element>

      </xs:all>
    </xs:complexType>
  </xs:element>
</xs:schema>
